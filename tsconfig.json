{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "target": "es2018",
    "module": "es2015",
    "lib": ["dom", "es2018"],
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "rootDir": "./src",
    "outDir": "lib"
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules/**/*"]
}
